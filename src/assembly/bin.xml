<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" 
	  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>bin</id>
  <formats>
    <format>zip</format>
  </formats>
  <files>
       <file>
      <source>${project.build.directory}/weavingSimulator-${pom.version}.jar</source>
      <outputDirectory>/</outputDirectory>
      <destName>WeavingSimulator.jar</destName>
   </file>
  </files>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>README*</include>
        <include>LICENSE*</include>
        <include>NOTICE*</include>
        <include>COPYING*</include>
	<include>help.html</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/attachment</directory>
      <outputDirectory>/attachment</outputDirectory>
      <includes>
        <include>*</include>
      </includes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <outputDirectory>lib</outputDirectory>
      <excludes>
	<exclude>weavingSimulator*</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
</assembly>
